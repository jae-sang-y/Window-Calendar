        <PasswordBox TabIndex="0" x:Name="Register_PWD_Input" HorizontalAlignment="Right" Margin="0,199,106,191" Width="193" Height="29" VerticalContentAlignment="Center" VerticalAlignment="Center"/>
        <PasswordBox TabIndex="0" x:Name="Register_Repeat_PWD_Input" HorizontalAlignment="Right" Margin="0,233,106,157" Width="193" Height="29" VerticalContentAlignment="Center" VerticalAlignment="Center"/>
