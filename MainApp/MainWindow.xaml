    <Grid>
        <TextBox TabIndex="0" x:Name="ID_input" HorizontalAlignment="Left" Height="30" Margin="108,198,0,191" TextWrapping="Wrap" Width="193" VerticalContentAlignment="Center" Text="apple03550" VerticalAlignment="Center"/>
        <PasswordBox TabIndex="0" x:Name="PWD_Input" HorizontalAlignment="Left" Margin="108,233,0,157" Width="193" Height="29" VerticalContentAlignment="Center" Password="apple03550" VerticalAlignment="Center"/>
