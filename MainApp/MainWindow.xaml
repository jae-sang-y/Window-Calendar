        <Label x:Name="RegisterError_Output" Content="" HorizontalAlignment="Right" Margin="0,308,106,0" Width="193" Height="91" Background="{x:Null}" Foreground="#FFD41414" FontSize="10" VerticalAlignment="Center"/>
        <Label Content="ID" HorizontalAlignment="Left" Margin="81,200,0,193" VerticalAlignment="Center"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="42,234,0,159" VerticalAlignment="Center"/>
        <Label Content="Password" HorizontalAlignment="Right" Margin="0,200,304,193" VerticalAlignment="Center"/>
        <Label Content="Password Repeat" HorizontalAlignment="Right" Margin="0,234,304,159" VerticalAlignment="Center"/>
        <Label Content="Class" HorizontalAlignment="Right" Margin="0,166,304,227" VerticalAlignment="Center"/>
        <Label Content="ID" HorizontalAlignment="Right" Margin="0,133,304,260" VerticalAlignment="Center"/>


    </Grid>
