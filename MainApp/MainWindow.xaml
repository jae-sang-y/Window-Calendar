        <Label x:Name="LoginError_Output" Content="" HorizontalAlignment="Left" Margin="109,308,0,0" Width="193" Height="91" Background="{x:Null}" Foreground="#FFD41414" FontSize="10" VerticalAlignment="Center"/>

